{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the dataset to deploy"
      }
    },
    "dataFactoryName": {
      "type": "string",
      "metadata": {
        "description": "Name of Data Factory where to deploy the dataset definition"
      }
    },
    "linkedServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Linked Service to use for the dataset definition"
      }
    }
  },
  "variables": {
    "datasetName": "[parameters('resourceName')]"
  },
  "resources": [
    {
      "type": "microsoft.dataFactory/datafactories",
      "name": "[parameters('dataFactoryName')]",
      "apiVersion": "2015-10-01",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "dependsOn": [
            "[concat('Microsoft.DataFactory/dataFactories/', parameters('dataFactoryName'))]"
          ],
          "name": "[variables('datasetName')]",
          "type": "datasets",
          "apiVersion": "2015-10-01",
          "properties": {
            "type": "AzureSqlTable",
            "linkedServiceName": "[parameters('linkedServiceName')]",
            "structure": [
              {
                "name": "log_date",
                "type": "String"
              },
              {
                "name": "requests",
                "type": "Int32"
              },
              {
                "name": "bytes_in",
                "type": "Decimal"
              },
              {
                "name": "bytes_out",
                "type": "Decimal"
              }
            ],
            "typeProperties": {
              "tableName": "dbo.usql_logs"
            },
            "availability": {
              "frequency": "Month",
              "interval": 1
            }
          }
        }
      ]
    }
  ],
  "outputs": {
    "datasetName": {
      "type": "string",
      "value": "[variables('datasetName')]"
    }
  }
}
